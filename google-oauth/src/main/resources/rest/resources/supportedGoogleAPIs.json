                "description": "Only read operation allowed",
                "allowedActions" : ["READ_MAIL", "READ_SETTINGS"]
            },
            {
                "scopeServiceName" : "https://www.googleapis.com/auth/gmail.labels",
                "scopeLabel" : "Manage Labels scope",
                "description": "Manage labels on your mailbox",
                "allowedActions" : ["READ_LABEL", "DELETE_LABEL"]
            },
            {
                "scopeServiceName" : "https://www.googleapis.com/auth/gmail.send",
                "scopeLabel" : "Send scope",
                "description" : "Only send operation allowed",
                "allowedActions" : ["SEND_MAIL"]
            },
            {
                "scopeServiceName" : "https://www.googleapis.com/auth/gmail.modify",
                "scopeLabel" : "Modify scope",
                "description" : "Only modify operations allowed, excluding delete",
                "allowedActions" : ["MODIFY_MAIL"]
            }
        ]
    }
