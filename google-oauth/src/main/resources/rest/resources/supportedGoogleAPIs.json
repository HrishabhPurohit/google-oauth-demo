[
    {
        "googleAPIServiceName" : "gmail.googleapis.com",
        "googleAPILabel" : "Gmail API",
        "scopes" : [
            {
                "scopeServiceName" : "https://mail.google.com/",
                "scopeLabel" : "Master scope",
                "description" : "All operations allowed on user's inbox",
                "allowedActions" : ["READ_MAIL", "COMPOSE_MAIL", "SEND_MAIL", "DELETE_MAIL"]
            },
            {
                "scopeServiceName" : "https://www.googleapis.com/auth/gmail.readonly",
